{
  "index_patterns": ["businesses-*"],
  "template": {
    "settings": {
      "index": {
        "number_of_shards": 1,
        "number_of_replicas": 0
      },
      "analysis": {
        "analyzer": {
          "chinese_analyzer": {
            "type": "custom",
            "tokenizer": "smartcn_tokenizer",
            "filter": ["lowercase", "smartcn_stop"]
          },
          "english_analyzer": {
            "type": "custom",
            "tokenizer": "standard",
            "filter": ["lowercase", "english_stop", "english_stemmer"]
          },
          "autocomplete_analyzer": {
            "type": "custom",
            "tokenizer": "standard",
            "filter": ["lowercase", "edge_ngram_filter"]
          }
        },
        "tokenizer": {
          "smartcn_tokenizer": {
            "type": "smartcn_tokenizer"
          }
        },
        "filter": {
          "smartcn_stop": {
            "type": "smartcn_stop"
          },
          "english_stop": {
            "type": "stop",
            "stopwords": "_english_"
          },
          "english_stemmer": {
            "type": "stemmer",
            "language": "english"
          },
          "edge_ngram_filter": {
            "type": "edge_ngram",
            "min_gram": 2,
            "max_gram": 20
          }
        }
      }
    },
    "mappings": {
      "properties": {
        "id": {
          "type": "keyword"
        },
        "slug": {
          "type": "keyword"
        },
        "status": {
          "type": "keyword"
        },
        "name_en": {
          "type": "text",
          "analyzer": "english_analyzer",
          "fields": {
            "autocomplete": {
              "type": "text",
              "analyzer": "autocomplete_analyzer"
            },
            "keyword": {
              "type": "keyword"
            }
          }
        },
        "name_zh": {
          "type": "text",
          "analyzer": "chinese_analyzer",
          "fields": {
            "autocomplete": {
              "type": "text",
              "analyzer": "autocomplete_analyzer"
            },
            "keyword": {
              "type": "keyword"
            }
          }
        },
        "description_en": {
          "type": "text",
          "analyzer": "english_analyzer"
        },
        "description_zh": {
          "type": "text",
          "analyzer": "chinese_analyzer"
        },
        "categories": {
          "type": "nested",
          "properties": {
            "id": {
              "type": "keyword"
            },
            "key": {
              "type": "keyword"
            },
            "name_en": {
              "type": "text",
              "analyzer": "english_analyzer"
            },
            "name_zh": {
              "type": "text",
              "analyzer": "chinese_analyzer"
            }
          }
        },
        "location": {
          "properties": {
            "geo": {
              "type": "geo_point"
            },
            "city": {
              "type": "keyword"
            },
            "state": {
              "type": "keyword"
            },
            "zip": {
              "type": "keyword"
            },
            "address_lines": {
              "type": "text",
              "analyzer": "standard"
            }
          }
        },
        "contact": {
          "properties": {
            "phone": {
              "type": "keyword"
            },
            "email": {
              "type": "keyword"
            },
            "website": {
              "type": "keyword"
            }
          }
        },
        "attributes": {
          "type": "object",
          "dynamic": true
        },
        "rating": {
          "type": "float"
        },
        "review_count": {
          "type": "integer"
        },
        "created_at": {
          "type": "date"
        },
        "updated_at": {
          "type": "date"
        }
      }
    }
  }
}