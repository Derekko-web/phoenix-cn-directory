{
  "name": "phoenix-cn-directory",
  "version": "1.0.0",
  "description": "Bilingual Chinese business directory for Phoenix metro area",
  "private": true,
  "workspaces": [
    "packages/web",
    "packages/api",
    "packages/shared"
  ],
  "scripts": {
    "dev": "pnpm --parallel run dev",
    "build": "pnpm run build:shared && pnpm --parallel run build",
    "build:shared": "pnpm --filter shared build",
    "test": "pnpm --parallel run test",
    "lint": "pnpm --parallel run lint",
    "typecheck": "pnpm --parallel run typecheck",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "db:reset": "pnpm --filter api run db:reset",
    "seed:businesses": "pnpm --filter api run seed:businesses"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "next": "^15.5.0"
  }
}